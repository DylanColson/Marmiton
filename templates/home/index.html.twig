{% extends "base.html.twig" %}
{% block title %}Home page{% endblock %}
{% block body %}
    

<div class="container">  

    <h1>Recettes de cuisine</h1> 

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}  

    <div class="row mt-4">
        {% for recette in recettes %}
                <div class="col-md-4 mt-3">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">

                            {% if recette.imageName %}
                                <img src="{{ vich_uploader_asset(recette, 'imageFile') }}" class="card-img-top" alt="">
                            {% else %}
                                <img src="{{ asset('images/recettes/philippe.jpg') }}" class="card-img-top" alt="">  
                            {% endif %}

                            <h5 class="card-title">{{recette.titre}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{recette.createdAt|format_datetime()}}</h6>
                            <p class="card-text">{{recette.resumer}}</p>
                            <a href="{{ path('recette_show', {id: recette.id}) }}" class="card-link">Voir la recette</a>
                        </div>
                    </div>
                </div>

        {% endfor %}
    </div>
</div>

{% endblock %}