{% extends "base.html.twig" %}

{% block body %}

    <div class="container"> 
        
        <div class="jumbotron">
            <h2>{{recette.titre}}</h2>
        </div>
        <div class="jumbotron">
            {% if recette.imageName %}
                <img src="{{ vich_uploader_asset(recette, 'imageFile') }}" class="card-img-top" alt="">
            {% else %}
                <img src="{{ asset('images/recettes/philippe.jpg') }}" class="card-img-top" alt="">  
            {% endif %}
        </div>

        <div class="row mt-3">
            <div class="col-md-3">{{ recette.temps }}</div>
            <div class="col-md-3">{{ recette.personne }}</div>
        </div>
        
        <div class="row mt-4">
            <div class="col-md-3">
            
            </div>
            <div class="col-md-9">
                {{ recette.preparation }}
            </div>
        </div>
    </div>

{% endblock %}